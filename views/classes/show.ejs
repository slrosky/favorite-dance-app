<%- include('../partials/header') %>
<h3><%= title %></h3>
<section>
        <div><%= danceClass.title %></div>    
        <form id="add-favorite" action="/favorites/class/<%= danceClass._id%>" method="POST">
            <input type="hidden" name="favoriteClasses" value="${danceClass._id}" class="btn fave">
            <% if (user) { %>
                <% if(!user.favoriteClasses.includes(danceClass._id)) {%>
                <button type="submit" class="btn"><img src="https://i.imgur.com/h6EHJ1n.png" class="fave" disabled></button>
            <% } %>        
            <% } else {}%>        
        </form>
        <div><%= danceClass.image %></div>
        <div><%= danceClass.day %></div>
        <div><%= danceClass.hour %> <%= danceClass.time %></div>
        <div>Style: <%= danceClass.style %> || Level: <%= danceClass.level %></div>
        <div><%= danceClass.description %></div>
    </section> 

<%- include('../partials/footer') %>